<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--选中时的图片背景--> 
    <item android:state_selected="true" android:color="#35acff" />
     <!--  触摸时并且没有获得焦点状态 -->  
    <item android:state_pressed="true" android:color="#35acff" />
     <!--获得焦点时的图片背景-->  
    <item android:state_focused="true" android:color="#ffffff" />
    <item android:color="@color/zhiku"/>
</selector> 
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        >
	<ImageView 
	    android:id="@+id/inviteman_item_img"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    />
	<LinearLayout 
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/inviteman_item_img"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/inviteman_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView 
                android:id="@+id/inviteman_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greyhomepage"
                />
        </LinearLayout>
       <CheckBox 
           android:id="@+id/inviteman_item_cb"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           />
    </RelativeLayout>

</LinearLayout>

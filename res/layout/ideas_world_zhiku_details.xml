<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/blueMain" >

        <LinearLayout
            android:id="@+id/ideas_world_zhiku_details_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/backimg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创意世界智库·"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ideas_world_zhiku_details_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(领导人、科学家、艺术家、企业家、慈善家)"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ideas_world_zhiku_details_shezhi"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/ideas_world_zhiku_details_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/ideas_world_zhiku_details_result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_world"
                    android:text="创意世界优秀结果"
                    android:textColor="@color/blueMain" />

                <Button
                    android:id="@+id/ideas_world_zhiku_details_heritage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_world"
                    android:text="创意世界优秀遗产"
                    android:textColor="@color/blueMain" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/greyxian" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white" >

                <LinearLayout
                    android:id="@+id/city_details_linearlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="主    席    团 :"
                        android:textColor="@color/zhiku" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout_img1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone"
                        android:background="@drawable/zkman1" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout_img2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/zkman1" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout_img3"
                        android:layout_width="30dp"
                        android:visibility="gone"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/zkman1" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout_img4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/zkman1" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout_img5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/zkman1" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/city_details_linearlayout1_img6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/grayright" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/greyxian" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" >

                <LinearLayout
                    android:id="@+id/city_details_linearlayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="理    事    会 :"
                        android:textColor="@color/zhiku" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout2_img1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/zkman1" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout2_img2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/zkman1" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout2_img3"
                        android:layout_width="30dp"
                        android:visibility="gone"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/zkman1" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout2_img4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/zkman1" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout2_img5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/zkman1" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/city_details_linearlayout2_img6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/grayright" />
                </RelativeLayout>

                <!--
                     <ImageView
                    android:id="@+id/city_details_linearlayout2_img6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/grayright" /> -->
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/greyxian" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:id="@+id/city_details_linearlayout3"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="专家顾问团 :"
                        android:textColor="@color/zhiku" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout3_img1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp" />

                    <ImageView
                        android:id="@+id/city_details_linearlayout3_img2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:id="@+id/city_details_linearlayout3_img3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:id="@+id/city_details_linearlayout3_img4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:id="@+id/city_details_linearlayout3_img5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/city_details_linearlayout3_img6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/grayright" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/greyxian" />

            <LinearLayout
                android:id="@+id/zhuangtai"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ideas_world_zhiku_details_dating"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/dating" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:drawableRight="@drawable/bootomblue"
                        android:text="大厅" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/ideas_world_zhiku_details_recommend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_world"
                        android:text="推荐加入好友"
                        android:textColor="@color/blueMain" />

                    <Button
                        android:id="@+id/ideas_world_zhiku_details_apply"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_world"
                        android:text="申请加入智库"
                        android:textColor="@color/blueMain" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/greyxian" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@color/whiteMain" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="@color/white" >

                <FrameLayout
                    android:layout_toLeftOf="@+id/ideas_world_zhiku_details_send"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp" >

                    <EditText
                        android:id="@+id/ideas_world_zhiku_details_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/newsbtn" />

                    <ImageButton
                        android:id="@+id/ideas_world_zhiku_details_biaoqing"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:src="@drawable/smile" />
                </FrameLayout>

                
                    <Button
                        android:layout_alignParentRight="true"
                        android:id="@+id/ideas_world_zhiku_details_send"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/shape"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
            </RelativeLayout>
            <View 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/greyxian"
                />
            <LinearLayout
                android:id="@+id/ideas_world_zhiku_details_ll_face_container"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:visibility="visible" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/ideas_world_zhiku_details_vpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
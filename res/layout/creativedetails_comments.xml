<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/ll_CreateDetails_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ll_CreateDetails_image_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/ll_CreateDetails_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="265"
            android:textColor="@color/greyhomepage"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_toLeftOf="@+id/ll_CreateDetails_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/ll_CreateDetails_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ll_CreateDetails_image_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李默然"
            android:textColor="@color/black_head"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ll_CreateDetails_image_img_text"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="不用这样谦虚不用这样谦虚不用这样谦虚不用这样谦虚不用这样谦虚不用这样谦虚不用这样谦虚不用这样谦虚不用这样谦虚不用这样谦虚不用这样谦虚不用这样谦虚不用这样谦虚"
            android:textColor="@color/greyhomepage"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/ll_CreateDetails_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="1分钟前"
        android:textColor="@color/greyhomepage"
        android:textSize="12sp" />
	<TextView 
	    android:id="@+id/ll_CreateDetails_image_img_del"
	    android:background="@drawable/shanchubutton"
	     android:textColor="@color/greyhomepage"
	     android:layout_marginTop="5dp"
	     android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
	    android:layout_below="@+id/ll_CreateDetails_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="删除"
	    />
</RelativeLayout>
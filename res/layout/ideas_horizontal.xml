<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:paddingLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical" >

    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/my_library_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@drawable/myzkimg" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/my_library_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="成都智库"
        android:textColor="@color/blackheadname" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grayman" />

        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/my_library_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="256"
            android:textColor="@color/head_time" />
    </LinearLayout>

</LinearLayout>
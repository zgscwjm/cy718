<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout
        android:id="@+id/hot_ideas_games_content_shangmian"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/blueMain" >

        <LinearLayout
            android:id="@+id/hot_ideas_games_content_back"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/backimg" />
        </LinearLayout>

        <TextView
            android:id="@+id/hot_ideas_games_content_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="众创创"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="提交作品"
            android:textColor="@color/white" />
    </RelativeLayout>
    <TextView 
        android:id="@+id/xitongmsg2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="暂无信息"
        android:visibility="gone"
        />
   <!--   android:stackFromBottom="false" -->
    <com.lsfb.cysj.view.XListView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/xitongmsg"
        android:footerDividersEnabled="false"       
        android:transcriptMode="alwaysScroll"
        >
    </com.lsfb.cysj.view.XListView>
	<!-- <ListView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/xitongmsg"
	    android:footerDividersEnabled="false"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
	    ></ListView> -->
</LinearLayout>

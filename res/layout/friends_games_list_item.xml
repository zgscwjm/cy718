<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/friends_games_list_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:id="@+id/friends_games_list_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="首届创意环保比赛"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@id/friends_games_list_item_title"
                android:textColor="#b5b5b5"
                android:id="@+id/friends_games_list_item_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="首届创意环保比赛首届创意环保比赛首届创意环保比赛"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
               
                android:layout_below="@id/friends_games_list_item_text"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grayman" />

                <TextView
                    android:id="@+id/friends_games_list_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:text="256"/>

                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bishaitb" />

                <TextView
                    android:id="@+id/friends_games_list_item_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:text="256" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
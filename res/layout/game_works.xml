<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteMain"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/blueMain" >

        <LinearLayout
            android:id="@+id/game_works_back"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/backimg" />
        </LinearLayout>

        <TextView
            android:id="@+id/game_works_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="参赛作品"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/game_works_tijiao"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="提交作品"
            android:textColor="@color/white" />
    </RelativeLayout>
    <TextView 
        android:visibility="gone"
        android:id="@+id/game_works_wu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="暂无信息哦"
        android:layout_gravity="center"
        android:gravity="center"
        />
	<com.lsfb.cysj.view.XListView 
	    android:background="@color/white"
	    android:id="@+id/game_works_list"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    ></com.lsfb.cysj.view.XListView>
</LinearLayout>
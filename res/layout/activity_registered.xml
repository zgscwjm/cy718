<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greysmall"
    android:orientation="vertical"
    tools:context=".RegisteredActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blueMain" >

        <ImageButton
            android:id="@+id/btnMemberBacking"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/backimg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册账号"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/greyxian" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/ivMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/grayphone" />

        <EditText
            android:id="@+id/etMemberAccountNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivMember"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ivMember"
            android:background="@null"
            android:hint="请输入手机号"
            android:singleLine="true"
            android:textColor="@color/greybig"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyxian" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/ivMemberThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/yanzma" />

        <EditText
            android:id="@+id/etMemberAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivMemberThree"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ivMemberThree"
            android:background="@null"
            android:hint="请输入验证码"
            android:singleLine="true"
            android:textColor="@color/greybig"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btngetVerificationCode"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
             android:background="@drawable/shpae_yzm"
            android:text="获取验证码"
            android:textColor="@color/greybig" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyxian" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/ivMemberFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/graypwd" />

        <EditText
            android:id="@+id/etMemberPassWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivMemberFour"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ivMemberFour"
            android:background="@null"
            android:hint="请输入密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/greybig"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyxian" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/ivMemberFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/querenpwd" />

        <EditText
            android:id="@+id/etMemberRePassWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivMemberFive"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivMemberFive"
            android:background="@null"
            android:hint="请再次输入密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/greybig"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyxian" />

    <Button
        android:id="@+id/btnsign"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:text="注册"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/greysmall"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/greysmall"
            android:text="我已阅读并同意"
            android:textColor="@color/greybig" />

        <Button
            android:id="@+id/btnUserMemBer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greysmall"
            android:text="《用户注册协议》"
            android:textColor="@color/blueMain" />
    </LinearLayout>

</LinearLayout>
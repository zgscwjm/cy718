<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical" >
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="5dp"
	    android:background="@color/whiteMain"
	    />
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/hot_ideas_games_item_img"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <!-- <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hot_ideas_games_item_img"
            android:layout_toRightOf="@+id/hot_ideas_games_item_img"
            android:orientation="vertical" > -->

            <TextView
                android:layout_toRightOf="@+id/hot_ideas_games_item_img"
                android:id="@+id/hot_ideas_games_item_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black_head"
                android:textSize="18sp" />

            <TextView
                android:layout_below="@+id/hot_ideas_games_item_head"
                android:layout_toRightOf="@+id/hot_ideas_games_item_img"
                android:id="@+id/hot_ideas_games_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#9d9d9d" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/hot_ideas_games_item_img"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grayman" />

                    <TextView
                        android:layout_gravity="bottom"
                        android:id="@+id/hot_ideas_games_item_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#9d9d9d" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bishaitb" />

                    <TextView
                        android:id="@+id/hot_ideas_games_item_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:textColor="#9d9d9d" />
                </LinearLayout>
            </LinearLayout>
       <!--  </LinearLayout> -->
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteMain"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/hot_news_head"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/hotnews_img"
                android:layout_width="fill_parent"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/hotnews_text"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#000000"
                android:gravity="center_vertical"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/greyxian" />

        <RelativeLayout
            android:id="@+id/hot_news2"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/hot_news_text1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@+id/hot_news_img1"
                android:textSize="16dp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/hot_news_img1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/greyxian" />

        <RelativeLayout
            android:id="@+id/hot_news3"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/hot_news_text2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="16dp"
                android:layout_toLeftOf="@+id/hot_news_img2"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/hot_news_img2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/greyxian" />

        <RelativeLayout
            android:id="@+id/hot_news4"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/hot_news_text3"
                android:layout_width="fill_parent"
                android:textSize="16dp"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@+id/hot_news_img3"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/hot_news_img3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/greyxian" />
    </LinearLayout>
	<TextView 
	    android:id="@+id/hot_news_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:gravity="center"
	    />
</LinearLayout>